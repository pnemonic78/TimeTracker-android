<resources>

    <style name="Widget" />

    <style name="Widget.TextView.Label" parent="TextAppearance.AppCompat.Caption" />

    <style name="Widget.TextView.Error" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/error</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Widget.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/spinner</item>

        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:minWidth">@dimen/progress_bar_size_large</item>
        <item name="android:maxWidth">@dimen/progress_bar_size_large</item>
        <item name="android:minHeight">@dimen/progress_bar_size_large</item>
        <item name="android:maxHeight">@dimen/progress_bar_size_large</item>
    </style>

    <style name="Widget.Button" parent="Widget.AppCompat.Button" />

    <style name="Widget.Button.Start">
        <item name="colorButtonNormal">@color/lime</item>
        <item name="android:drawableEnd">@drawable/ic_play_arrow</item>
    </style>

    <style name="Widget.Button.Stop">
        <item name="colorButtonNormal">@color/red</item>
        <item name="android:drawableEnd">@drawable/ic_stop</item>
    </style>

    <style name="Widget.TextView.Timer" parent="TextAppearance.AppCompat.Headline">
        <item name="android:gravity">right</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TextView.Value" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TextView.Value.Time">
        <item name="android:gravity">right</item>
    </style>

</resources>
