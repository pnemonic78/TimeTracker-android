<resources>

    <style name="Widget.TextView.Label" parent="TextAppearance.AppCompat.Caption" />

    <style name="Widget.TextView.Error" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/error</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Widget.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/spinner</item>

        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:minWidth">@dimen/progress_bar_size_large</item>
        <item name="android:maxWidth">@dimen/progress_bar_size_large</item>
        <item name="android:minHeight">@dimen/progress_bar_size_large</item>
        <item name="android:maxHeight">@dimen/progress_bar_size_large</item>
    </style>

</resources>
