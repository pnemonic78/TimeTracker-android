<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="RtlHardcoded">

    <TableRow>

        <TextView
            android:id="@+id/durationTotalLabel"
            style="@style/Widget.TextView.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/duration_total" />

        <TextView
            android:id="@+id/durationTotal"
            style="@style/Widget.TextView.Value.Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="4dp"
            tools:text="@tools:sample/date/hhmm" />

        <TextView
            android:id="@+id/costTotalLabel"
            style="@style/Widget.TextView.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/cost_total" />

        <TextView
            android:id="@+id/costTotal"
            style="@style/Widget.TextView.Value.Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="4dp"
            tools:text="@tools:sample/date/hhmm" />
    </TableRow>

</TableLayout>